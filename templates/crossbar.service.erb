[Unit]
Description=Crossbar.io
After=network.target

[Service]
Type=simple
User=<%= @user %>
Group=<%= @user %>
StandardInput=null
StandardOutput=journal
StandardError=journal
ExecStart=/opt/crossbar/bin/crossbar start --cbdir=/home/<%= @user %>/.crossbar --loglevel=<%= @log_level %> --logtofile --logdir /home/<%= @user %>
Restart=on-abort

[Install]
WantedBy=multi-user.target
